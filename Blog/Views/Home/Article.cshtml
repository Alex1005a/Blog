@model Blog.Entities.Models.Article

<h1>Статья</h1>

<a>Автор: @Model.User.UserName</a>
<h3>@Model.Title</h3>
<a>@Model.Body</a>

@await Html.PartialAsync("GetAssessment", Model.Votes)

<form method="post" asp-controller="Home" asp-action="AddVoteForArticle" asp-route-id="@Model.Id" asp-route-voteStatus="@Blog.Entities.Models.VoteStatus.Plus">
    <div>
        <input type="submit" value="Плюс" />
    </div>
</form>

<form method="post" asp-controller="Home" asp-action="AddVoteForArticle" asp-route-id="@Model.Id" asp-route-voteStatus="@Blog.Entities.Models.VoteStatus.Minus">
    <div>
        <input type="submit" value="Минус" />
    </div>
</form>